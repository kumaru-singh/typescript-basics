{
  "name": "ts-functions-library",
  "version": "1.0.0",
  "main": "dist/index.js",
  "scripts": {
    
    "dev": "ts-node-dev --respawn src/index.ts",
    "watch": "tsc --watch",

    
    "run": "node dist/index.js",

    
    "clean": "rimraf dist",
    "build": "npm run clean && tsc",
    "build:watch": "tsc --watch",

  
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",

    
    "debug": "node --inspect src/index.js",
    "debug:brk": "node --inspect-brk src/index.js",
    "debug:ts": "node --inspect -r ts-node/register src/index.ts",
    "dev:debug": "ts-node-dev --inspect --respawn src/index.ts",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",

    
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint 'src/**/*.ts' --fix",
    "format": "prettier --write 'src/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts'",
    "typecheck": "tsc --noEmit",

    
    "audit": "npm audit",
    "audit:fix": "npm audit fix",
    "audit:fix:force": "npm audit fix --force",

   
    "docs": "typedoc --out docs src",
    "docs:serve": "serve docs",

    
    "validate": "npm run typecheck && npm run lint && npm test",

    
    "debug:heap": "node -r heapdump src/index.js",
    "debug:memory": "node --expose-gc --inspect src/index.js",
    "profile:cpu": "node --cpu-prof src/index.js",
    "profile:heap": "node --heap-prof src/index.js"
  },
  "devDependencies": {
    "@types/jest": "^29.5.2",
    "@types/node": "^20.5.1",
    "eslint": "^8.48.0",
    "jest": "^29.6.4",
    "prettier": "^3.9.0",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2",
    "typedoc": "^0.26.11",
    "serve": "^14.2.0",
    "heapdump": "^0.3.15"
  }
}
